{
  "extends": [
    ":ignoreUnstable",
    ":prImmediately",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":pinVersions",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    "group:all",
    "workarounds:all"
  ],
  "schedule": [
    "before 3am on Saturday"
  ],
  "kubernetes": {
    "fileMatch": ["^k8s/.*\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/linuxserver/bazarr",
        "ghcr.io/linuxserver/jackett"
      ],
      "versioning": "regex:^(development-)?version-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/linuxserver/radarr",
        "linuxserver/sonarr"
      ],
      "versioning": "regex:^version-3\\.(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "linuxserver/readarr"
      ],
      "versioning": "regex:^nightly-version-0\\.(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "linuxserver/plex"
      ],
      "versioning": "regex:^version-1\\.(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-.+$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["instrumentisto/rsync-ssh"],
      "versioning": "regex:^alpine(?<major>\\d+)\\.(?<minor>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "jitsi/jicofo",
        "jitsi/jvb",
        "jitsi/prosody",
        "jitsi/web"
      ],
      "versioning": "regex:^stable-(?<major>\\d+)-(?<minor>\\d+)$"
    }
  ]
}
